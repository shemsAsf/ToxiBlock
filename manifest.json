{
  "manifest_version": 3,
  "name": "ToxiBlock",
  "description": "Block Hate Speech",
  "version": "1.0",
  "content_scripts": [
    {
      "matches": ["https://x.com/*"],
      "js": ["dist/content.js"],
      "css": ["src/style.css"]
    }
  ],
  "permissions": [
    "storage",
    "activeTab",
    "scripting"
  ],
  "action": {
    "default_popup": "src/index.html"
  },
  "icons": {
    "16": "resources/Toxiblock_icon.png",
    "48": "resources/Toxiblock_icon.png",
    "128": "resources/Toxiblock_icon.png"
  }
}
